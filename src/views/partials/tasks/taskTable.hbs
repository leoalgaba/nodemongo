{{#if tasks}}
    <table class="table table-bordered table-hover table-dark">
        <thead>
            <tr>
                <th>N.</th>
                <th>Titulo</th>
                <th>Descripcion</th>
                <th>Operacion</th>
            </tr>
        </thead>
        <tbody>
            {{#each tasks}}
            <tr>
                <td>{{@index}}</td>
                <td>{{titulo}}</td>
                <td>{{descripcion}}</td>
                <td>
                    {{#if hecho}}
                    <a href="/done/{{_id}}" class="btn btn-dark btn-sm">hecho</a>
                    {{else}}
                    <a href="/done/{{_id}}" class="btn btn-success btn-sm">pendiente</a>
                    {{/if}}
                    <a href="/delete/{{_id}}" class="btn btn-danger btn-sm">borrar</a>
                    <a href="/edit/{{_id}}" class="btn btn-info btn-sm ">editar</a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
{{else}}
<div class="text-center">
    <h1>No hay tareas</h1>
    <img src="" alt=""/>
</div>
{{/if}}
